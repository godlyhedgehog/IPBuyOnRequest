{% sw_extends "@Storefront/storefront/page/product-detail/buy-widget-form.html.twig" %}

{% block page_product_detail_buy_button %}
    {% if product.customFields.IPBuyOnRequest_cf_buy_on_request %}
        {% set status = "disabled " %}
        {% set snippet = "IPBuyOnRequest.buyOnRequest" %}
    {% else %}
        {% set status = "" %}
        {% set snippet = "detail.addProduct" %}
    {% endif %}
    <button {{ status }} class="{{ status }}btn btn-primary btn-block btn-buy"
            title="{{ snippet|trans|striptags }}"
            aria-label="{{ snippet|trans|striptags }}">
        {{ snippet|trans|sw_sanitize }}
    </button>
{% endblock %}

